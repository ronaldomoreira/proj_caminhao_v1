@model appCaminhao.Models.CaminhaoViewModel

@{
    ViewData["Title"] = "Editar caminhão";
}

<h3><a asp-area="" asp-controller="Caminhoes" asp-action="Index"><i class="fa-solid fa-truck"></i> Caminhões</a>/Editar</h3>
<hr />
<h4>Caminhão</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-area="" asp-controller="Caminhoes" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Fabricante" class="control-label"></label>
                <select class="form-select" asp-for="Fabricante" class="form-control" asp-items="ViewBag.listaFabircantes">
                    <option disabled="disabled" selected="selected" value="">Selecione...</option>
                </select>
                <span asp-validation-for="Fabricante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <select class="form-select" asp-for="Modelo" class="form-control" asp-items="ViewBag.listaModelos">
                    <option disabled="disabled" selected="selected" value="">Selecione...</option>
                </select>
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnoFabricacao" class="control-label"></label>
                <input asp-for="AnoFabricacao" class="form-control" />
                <span asp-validation-for="AnoFabricacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnoModelo" class="control-label"></label>
                <input asp-for="AnoModelo" class="form-control" />
                <span asp-validation-for="AnoModelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <hr />
                <button type="submit" value="Salvar" class="btn btn-primary"><i class="fa-solid fa-floppy-disk fa-lg"></i> Salvar</button> |
                <a asp-area="" asp-controller="Caminhoes" asp-action="Index"><i class="fa-solid fa-arrow-rotate-left"></i> Voltar para a lista</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
